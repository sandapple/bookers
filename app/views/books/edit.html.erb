<h2>title</h2>
<p><%= @book.title %></p>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>body</h2>
<p><%= @book.body %></p>

<%= link_to "show", "/books/#{@book.id}" %>
<%= link_to "back",books_path %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <% end %>

